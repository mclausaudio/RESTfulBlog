<% include ./partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header">
        <p>edit <%= blog.title %></p>
        <!--you need to npm install method-override and add the ?_method=PUT string at end of url to make put request
        HTML can't dp PUT requests, this is a work around-->
        <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
            <div class="field">
                <label>Title</label>
                <!--use value instead of placeholder to prefill boxes with previous blogs content-->
                <input type="text" name="blog[title]" value="<%= blog.title %>">   
            </div>
            <div class="field">
                <label>Image</label>
                <input type="text" name="blog[image]" value="<%= blog.image %>"> 
            </div>
            <div class="field">
                <label>Text</label>
                <textarea name="blog[body]" placeholder="Type blog post here"><%= blog.body %></textarea>
            </div>
            <input class="ui teal big basic button" type="submit">
        </form>
    </div>
</div>
<% include ./partials/footer %>